	<HEADER
	    PLATEFORM="ALL"
	    SERIAL=""
	    VERSION="0.102"
	    STATUS="ALPHA"
	
	    COMPATIBILITY="ALL"
	    AUTHOR="Talend"
	    RELEASE_DATE="20130911A"
	    STARTABLE="true"
	    LOG4J_ENABLED="true"
	    
	    VISIBLE="false"
  	>
    	<SIGNATURE/>
  	</HEADER>

  	<FAMILIES>
  		<FAMILY>Deprecated</FAMILY>
  	</FAMILIES>

  	<DOCUMENTATION>
    	<URL/>
  	</DOCUMENTATION>

  	<CONNECTORS>
	   	<CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="0"/>
	    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1"/>
	    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
	    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
